# Wekan
WEKAN_ROOT_URL=http://wekan.openteams
WEKAN_DEFAULT_AUTHENTICATION_METHOD=ldap
WEKAN_LDAP_ENABLE=true
WEKAN_LDAP_PORT=389
WEKAN_LDAP_HOST=ldap.openteams
